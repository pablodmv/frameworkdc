<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>frameworkp.FrontController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Setup</servlet-name>
        <servlet-class>setup.Setup</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>*.cmd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Setup</servlet-name>
        <url-pattern>/Setup</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/Error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/ErrorAuth.html</location>
    </error-page>
    <security-constraint>
        <display-name>Reestricciones Administrador</display-name>
        <web-resource-collection>
            <web-resource-name>Directorio admin</web-resource-name>
            <description>Reestriccion a Paginas de admin</description>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Comandos</web-resource-name>
            <description>Reestriccion de comandos</description>
            <url-pattern>*.cmd</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>inicio</web-resource-name>
            <description/>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/Login.jsp</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Paginas</web-resource-name>
            <description>Paginas</description>
            <url-pattern>*.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Reestricciones Usuario</display-name>
        <web-resource-collection>
            <web-resource-name>Paginas</web-resource-name>
            <description/>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/Login.jsp</url-pattern>
            <url-pattern>/AltaContacto.jsp</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Comandos</web-resource-name>
            <description/>
            <url-pattern>/AddContact.cmd</url-pattern>
            <url-pattern>/addContact.cmd</url-pattern>
            <url-pattern>/Logout.cmd</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>USER</role-name>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>libreta</realm-name>
        <form-login-config>
            <form-login-page>/Login.jsp</form-login-page>
            <form-error-page>/Error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Rol Administradores</description>
        <role-name>ADMIN</role-name>
    </security-role>
    <security-role>
        <description>Usuario Standar</description>
        <role-name>USER</role-name>
    </security-role>
    <ejb-local-ref>
        <ejb-ref-name>LoginEjb</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>miPaquete.LoginEjbLocal</local>
        <ejb-link>LoginEjb</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>ABMUsuario</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>ejb.ABMUsuarioLocal</local>
        <ejb-link>ABMUsuario</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>ABMContacto</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>ejb.ABMContactoLocal</local>
        <ejb-link>ABMContacto</ejb-link>
    </ejb-local-ref>
</web-app>
