<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>frameworkp.FrontController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>setup</servlet-name>
        <servlet-class>setup.Setup</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>addUser</servlet-name>
        <servlet-class>concreteCommands.AddUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>*.cmd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>setup</servlet-name>
        <url-pattern>/setup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addUser</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <ejb-local-ref>
        <ejb-ref-name>LoginEjb</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>miPaquete.LoginEjbLocal</local>
        <ejb-link>LoginEjb</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>ABMUsuario</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>ejb.ABMUsuarioLocal</local>
        <ejb-link>ABMUsuario</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>ABMContacto</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>ejb.ABMContactoLocal</local>
        <ejb-link>ABMContacto</ejb-link>
    </ejb-local-ref>
</web-app>
