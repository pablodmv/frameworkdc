<mvc-config>
    <command-mappings>
        <command path="/Bienvenido" forwardTo="/Bienvenido.jsp"/>
        <command path="/Login" forwardTo="/Login.jsp"/>
        <command path="/addUser" forwardTo="/altaUsuario.jsp"/>
        <command path="/editUser" forwardTo="/EditarUsuario.jsp"/>
        <command path="/deleteUser" forwardTo="/EliminarUsuario.jsp"/>
        <command path="/queryUser" forwardTo="/QueryUsuario.jsp"/>

        <command path="/Check" type="concreteCommands.ComandoConcreto">
            <forward name="Success" path="/Bienvenido.jsp"/>
            <forward name="Fail" path="/Error.jsp"/>
        </command>

        <command path="/AddUser" type="concreteCommands.addUser">
            <forward name="Success" path="/altaUsuario.jsp"/>
            <forward name="Fail" path="/altaUsuario.jsp"/>
        </command>

        <command path="/SearchUser" type="concreteCommands.searchUser">
            <forward name="SuccessDelete" path="/EliminarUsuario.jsp"/>
            <forward name="SuccessEdit" path="/EditarUsuario.jsp"/>
            <forward name="FailDelete" path="/EliminarUsuario.jsp"/>
            <forward name="FailEdit" path="/EditarUsuario.jsp"/>
        </command>

        <command path="/DeleteUser" type="concreteCommands.deleteUser">
            <forward name="Success" path="/EliminarUsuario.jsp"/>
            <forward name="Fail" path="/EliminarUsuario.jsp"/>
        </command>

    </command-mappings>
</mvc-config>
